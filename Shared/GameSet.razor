<section class="functional-btns">
    <div @onclick="() => ShowGameSet = true">NEW GAME</div>
    <div>LEADERBOARD</div>
    <div>EXIT</div>
</section>


@if (ShowGameSet)
{

    <section class="login-form">
        <label for="username">game name:
            <input type="text" name="username" id="username">
        </label>
        <label for="password">ball speed:
            <select name="ball-speed" id="ball-speed">
                <option value="slow">slow</option>
                <option value="medium">medium</option>
                <option value="fast">fast</option>
            </select>
        </label>
        <label for="password">mode:
            <select name="ball-speed" id="ball-speed">
                <option value="slow">first-out</option>
                <option value="medium">***</option>
                <option value="fast">***</option>
            </select>
        </label>

    </section>
    <a class="login-btn" href="/game-page">start</a>
}

@code {
    bool ShowGameSet;
}